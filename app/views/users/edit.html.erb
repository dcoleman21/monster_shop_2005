<% if request.env['PATH_INFO'] == "/profile/edit/password" %>
  <%= render partial: 'form', locals: {
                                        path: "/profile",
                                        action: :password,
                                        method: :patch,
                                        button_text: 'Update Password'
                                      } %>
<% else %>
  <%= render partial: 'form', locals: {
                                        path: "/profile",
                                        action: :edit,
                                        method: :patch,
                                        button_text: 'Update Information'
                                      } %>
<% end %>
