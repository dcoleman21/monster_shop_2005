<%= form_tag path, method: method do %>
  <% if action == :new || action == :edit %>
    <%= label_tag :name %>
    <%= text_field_tag :name, (if @user.present? then @user.name else nil end) %>
    <%= label_tag :address %>
    <%= text_field_tag :address, (if @user.present? then @user.address else nil end) %>
    <%= label_tag :city %>
    <%= text_field_tag :city, (if @user.present? then @user.city else nil end) %>
    <%= label_tag :state %>
    <%= text_field_tag :state, (if @user.present? then @user.state else nil end) %>
    <%= label_tag :zip %>
    <%= text_field_tag :zip, (if @user.present? then @user.zip else nil end) %>
    <%= label_tag :email %>
    <%= text_field_tag :email, (if @user.present? then @user.email else nil end) %>
  <% end %>
  <% if action == :new || action == :password %>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
    <br>
    <%= label_tag :confirm_password %><br>
    <%= password_field_tag :confirm_password %>
  <% end %>
  <%= submit_tag button_text %>
<% end %>
